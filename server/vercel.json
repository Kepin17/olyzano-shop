{
    "version": 2,
    "function": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_KEY": "@app_key",
        "APP_URL": "https://your-vercel-project.vercel.app",
        "DB_CONNECTION": "mysql",
        "DB_HOST": "@db_host",
        "DB_PORT": "3306",
        "DB_DATABASE": "@db_name",
        "DB_USERNAME": "@db_username",
        "DB_PASSWORD": "@db_password"
    },
    "outputDirectory": "public/build"
}
